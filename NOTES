# WEBIOPI
https://code.google.com/p/webiopi/
# -install
sudo aptitude update
sudo aptitude install subversion
svn checkout http://webiopi.googlecode.com/svn/trunk/ webiopi-trunk
cd webiopi-trunk
sudo ./setup.sh
# -location:
/usr/share/webiopi/htdocs


